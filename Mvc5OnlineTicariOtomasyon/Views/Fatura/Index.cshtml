@using Mvc5OnlineTicariOtomasyon.Models.Siniflar
@model List<Fatura>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<br />
<table class="table table-bordered" style="margin-left:20px">

    <tr>
        <th>Fatura Seri No</th>
        <th>Fatura Sıra No</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
   
        <th>Detay</th>
        <th>Güncelleme</th>
        <th>Yeni Kalem</th>
        <th>Popup Liste</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FaturaSeriNo</td>
            <td>@item.FaturaSıraNo</td>
            <td>@Convert.ToDateTime(@item.Tarih).ToString("d/MM/yyyy")</td>
            <td>@item.Saat</td>
            <td>@item.Toplam</td>
        
            <td><a href="/Fatura/FaturaDetay/@item.FaturaID" class="btn btn-warning">Detaylar</a></td>
            <td><a href="/Fatura/FaturaGuncelle/@item.FaturaID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Fatura/FaturaGuncelle/@item.FaturaID" class="btn btn-secondary">Kalem</a></td>
            <td><a href="/Fatura/FaturaGuncelle/@item.FaturaID" class="btn btn-outline-info">Popup </a></td>
        </tr>
    }


</table>
<a href="/Fatura/FaturaEkle" class="btn btn-primary" style="margin-left:20px">Yeni Fatura Girişi</a>
