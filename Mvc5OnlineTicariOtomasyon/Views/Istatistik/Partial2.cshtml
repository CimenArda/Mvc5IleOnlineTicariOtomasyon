@model IEnumerable<Mvc5OnlineTicariOtomasyon.Models.Siniflar.Cari>

<div class="card">
    <div class="card-header">
        <h1 class="card-title">Cariler Tablosu</h1>

        
    </div>
    <!-- /.card-header -->
    <div class="card-body table-responsive p-0">
        <table class="table table-hover text-nowrap">
            <thead>
                <tr>
                    <th>Cari Numarası</th>
                    <th>Cari Ad-Soyad</th>
                    <th>Cari Şehir</th>
                    <th>Cari Mail</th>
                    <th>Cari Durum</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {


                <tr>
                    <td>@item.CariID</td>
                    <td>@item.CariAd @item.CariSoyad</td>
                    <td>@item.CariSehir</td>
                    <td><span class="tag tag-success">@item.CariMail</span></td>
                    <td>@item.CariDurum</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
