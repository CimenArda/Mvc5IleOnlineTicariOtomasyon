
@model IEnumerable<Mvc5OnlineTicariOtomasyon.Models.Siniflar.Kategori>





<div class="col-md-6">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Kategori Tablosu</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Kategori Adı</th>
                        <th>Bar</th>
                        <th style="width: 40px">Oran</th>
                    </tr>
                </thead>
                @{ int sirano = 0;}
                <tbody>
                    @foreach (var item in Model)
                    {


                    <tr>
                        <td>@{sirano++;} @sirano</td>
                        <td>@item.KategoriAd</td>
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-danger">55%</span></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

    @Html.Action("Partial1")
    <!-- /.card -->
</div>
