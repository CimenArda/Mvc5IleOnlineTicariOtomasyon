@using Mvc5OnlineTicariOtomasyon.Models.Siniflar
@model List<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<table class="table table-bordered" style="margin-left:20px">

    <tr>
        <th>Kategori Numarası</th>
        <th>Kategori Adı</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.KategoriID</td>
            <td>@item.KategoriAd</td>
            <td><a href="/Kategori/KategoriSil/@item.KategoriID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kategori/KategoriGuncelle/@item.KategoriID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }


</table>
<a href="/Kategori/KategoriEkle" class="btn btn-primary"  style="margin-left:20px">Yeni Kategori Ekle</a>